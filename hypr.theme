$HOME/.config/hypr/themes/theme.conf|> $HOME/.config/hypr/themes/colors.conf
exec = gsettings set org.gnome.desktop.interface icon-theme 'Tela-circle-yellow'
exec = gsettings set org.gnome.desktop.interface gtk-theme 'Kanagawa-B'
exec = gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'

general {
    gaps_in = 3
    gaps_out = 8
    border_size = 2
    col.active_border = rgba(dcd7baff) rgba(c8c093ff) 45deg
    col.inactive_border = rgba(16161dcc) rgba(1f1f28cc) 45deg
    layout = dwindle
    resize_on_border = true
}

group {
    col.border_active = rgba(dcd7baff) rgba(c8c093ff) 45deg
    col.border_inactive = rgba(16161dcc) rgba(1f1f28cc) 45deg
    col.border_locked_active = rgba(dcd7baff) rgba(c8c093ff) 45deg
    col.border_locked_inactive = rgba(16161dcc) rgba(1f1f28cc) 45deg
}

decoration {
    rounding = 10
    drop_shadow = false

    blur {
        enabled = yes
        size = 6
        passes = 3
        new_optimizations = on
        ignore_opacity = on
        xray = false
    }
}

layerrule = blur,waybar
